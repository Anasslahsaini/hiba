    <!-- JavaScript pour l'animation 'fade-in-up' et Intro --><script>
        document.addEventListener("DOMContentLoaded", function() {
            // --- Logique d'Animation Fade-In-Up pour les sections ---
            const elements = document.querySelectorAll('.fade-in-up');

            const observer = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('is-visible');
                        observer.unobserve(entry.target);
                    }
                });
            }, {
                threshold: 0.15
            });

            elements.forEach(element => {
                observer.observe(element);
            });


            // --- Logique Menu Mobile (AJOUT√âE) ---
            const menuButton = document.getElementById('menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            const iconOpen = document.getElementById('menu-icon-open');
            const iconClose = document.getElementById('menu-icon-close');
            const mobileLinks = mobileMenu.querySelectorAll('a');

            function toggleMenu() {
                const isHidden = mobileMenu.classList.contains('hidden');
                if (isHidden) {
                    mobileMenu.classList.remove('hidden');
                    iconOpen.classList.add('hidden');
                    iconClose.classList.remove('hidden');
                    // Emp√™che le scroll sur le corps du document lorsque le menu est ouvert
                    document.body.style.overflow = 'hidden'; 
                } else {
                    mobileMenu.classList.add('hidden');
                    iconOpen.classList.remove('hidden');
                    iconClose.classList.add('hidden');
                    // R√©active le scroll
                    document.body.style.overflow = '';
                }
            }

            menuButton.addEventListener('click', toggleMenu);

            // Ferme le menu quand un lien est cliqu√©
            mobileLinks.forEach(link => {
                link.addEventListener('click', () => {
                    if (!mobileMenu.classList.contains('hidden')) {
                        setTimeout(toggleMenu, 300); // Laisse le temps pour le scroll doux
                    }
                });
            });
            // --- FIN Logique Menu Mobile ---


            // --- Logique d'Animation d'Introduction (Machine √† √âcrire) ---
            const introOverlay = document.getElementById('intro-overlay');
            
            // 1. V√©rifie si l'intro a d√©j√† √©t√© jou√©e dans cette session
            if (sessionStorage.getItem('introPlayed') === 'true') {
                introOverlay.style.display = 'none';
                return; // Stoppe l'ex√©cution du reste du script d'intro
            }
            
            // 2. Si non jou√©e, proc√®de √† l'animation
            const introTextElement = document.getElementById('intro-text');
            // TEXTE MIS √Ä JOUR (Pr√™te)
            const textToType = "Pr√™te √† d√©couvrir mon parcours ? Allons-y.".split(' ');
            const delayBetweenWords = 150; // D√©lai entre chaque mot (ms)
            const finalDelay = 2500; // 2.5 secondes apr√®s affichage complet (ms)
            let wordIndex = 0;

            function typeWord() {
                if (wordIndex < textToType.length) {
                    // Ajoute un mot avec un espace, puis un petit d√©lai
                    introTextElement.textContent += textToType[wordIndex] + (wordIndex < textToType.length - 1 ? ' ' : '');
                    wordIndex++;
                    setTimeout(typeWord, delayBetweenWords);
                } else {
                    // Animation termin√©e : retire le curseur et fait dispara√Ætre l'overlay
                    introTextElement.classList.add('finished');
                    // Marque l'intro comme jou√©e
                    sessionStorage.setItem('introPlayed', 'true'); 
                    
                    setTimeout(function() {
                        // D√©clenche la transition de l'overlay (opacity 1 -> 0)
                        introOverlay.style.opacity = '0';
                        // Supprime l'overlay du DOM apr√®s la transition
                        setTimeout(() => {
                            introOverlay.style.display = 'none';
                        }, 1000); // 1000ms = dur√©e de transition CSS
                    }, finalDelay);
                }
            }
            typeWord();
        });
    </script>
